    <select id="findUserByUserId" parameterType="int" resultType="com.github.lionboard.model.User">
        SELECT *
        FROM USER_TB
        WHERE id = #{userId} AND userStatus = 'S'
    </select>

    <select id="findUserByIdentity" parameterType="String" resultType="com.github.lionboard.model.User">
        SELECT *
        FROM USER_TB
        WHERE identity = #{identity} AND userStatus = 'S'
    </select>

    <select id="findUserByName" parameterType="String" resultType="com.github.lionboard.model.User">
        SELECT *
        FROM USER_TB
        WHERE name = #{name} AND userStatus = 'S'
    </select>

    <insert id="insertUser" parameterType="com.github.lionboard.model.User">
        INSERT INTO USER_TB(identity,isOAuth,roles,name,email,profileUrl,password) VALUES (#{identity},#{isOAuth},#{roles},#{name},#{email},#{profileUrl},#{password});
        <selectKey keyProperty="id" resultType="Integer" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <delete id="deleteAll" >
        DELETE FROM USER_TB;
    </delete>

    <update id="updateUser" parameterType="com.github.lionboard.model.User">
        UPDATE User_TB SET isOAuth=#{isOAuth},roles=#{roles},name=#{name},email=#{email},profileUrl=#{profileUrl},password=#{password} WHERE id=#{id}
    </update>

    <delete id = "deleteUserByid" >
        DELETE FROM USER_TB WHERE id=#{id}
    </delete>

    <update id="updateUserStatusToLeave" >
        UPDATE USER_TB SET userStatus='L' WHERE id=#{id}
    </update>


